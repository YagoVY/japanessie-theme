{% comment %}
  Japanessie Compact Hero Section
  Conversion-optimized hero with Japanese text and single CTA
{% endcomment %}

<style>
  .hero-compact {
    position: relative;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    overflow: hidden;
    padding: 5rem 1rem 2rem;
    text-align: center;
  }

  .hero-compact::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.1) 2px, transparent 2px),
      radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.08) 1px, transparent 1px),
      radial-gradient(circle at 40% 80%, rgba(255, 255, 255, 0.06) 3px, transparent 3px);
    background-size: 100px 100px, 150px 150px, 80px 80px;
    animation: float 20s ease-in-out infinite;
    will-change: transform;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 600px;
    margin: 0 auto;
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero-content.animate {
    opacity: 1;
    transform: translateY(0);
  }

  .hero-headline {
    font-size: 2.2rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.5rem;
    line-height: 1.2;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
  }

  .hero-subtitle {
    font-family: 'Noto Sans JP', 'Hiragino Sans', 'Yu Gothic', sans-serif;
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 1rem;
    font-weight: 400;
    text-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
  }

  .hero-description {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.85);
    margin-bottom: 2rem;
    line-height: 1.5;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-cta {
    display: inline-block;
    background: linear-gradient(135deg, #c53030, #fd7e14);
    color: white;
    padding: 1rem 2rem;
    border-radius: 30px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 8px 25px rgba(197, 48, 48, 0.3);
    border: 2px solid transparent;
    will-change: transform, box-shadow;
  }

  .hero-cta:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 12px 35px rgba(197, 48, 48, 0.4);
    color: white;
  }

  .hero-cta:focus {
    outline: 3px solid rgba(255, 255, 255, 0.5);
    outline-offset: 3px;
  }

  .hero-cta:active {
    transform: translateY(-1px) scale(1.02);
  }

  .floating-elements {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 1;
  }

  .floating-dot {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    animation: float-dot 15s ease-in-out infinite;
  }

  .floating-dot:nth-child(1) {
    top: 20%;
    left: 10%;
    animation-delay: 0s;
  }

  .floating-dot:nth-child(2) {
    top: 60%;
    right: 15%;
    animation-delay: 3s;
  }

  .floating-dot:nth-child(3) {
    bottom: 30%;
    left: 20%;
    animation-delay: 6s;
  }

  .floating-dot:nth-child(4) {
    top: 40%;
    right: 25%;
    animation-delay: 9s;
  }

  .floating-dot:nth-child(5) {
    bottom: 50%;
    right: 10%;
    animation-delay: 12s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    33% {
      transform: translateY(-20px) rotate(1deg);
    }
    66% {
      transform: translateY(10px) rotate(-1deg);
    }
  }

  @keyframes float-dot {
    0%, 100% {
      transform: translateY(0px) translateX(0px);
      opacity: 0.3;
    }
    25% {
      transform: translateY(-30px) translateX(10px);
      opacity: 0.6;
    }
    50% {
      transform: translateY(-15px) translateX(-5px);
      opacity: 0.4;
    }
    75% {
      transform: translateY(-40px) translateX(15px);
      opacity: 0.7;
    }
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero-compact {
      min-height: 50vh;
      padding: 3rem 1rem 1.5rem;
    }

    .hero-headline {
      font-size: 1.8rem;
      margin-bottom: 0.75rem;
    }

    .hero-subtitle {
      font-size: 1rem;
      margin-bottom: 1.25rem;
    }

    .hero-description {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }

    .hero-cta {
      padding: 0.875rem 1.75rem;
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .hero-compact {
      padding: 2.5rem 1rem 1rem;
    }

    .hero-headline {
      font-size: 1.6rem;
    }

    .hero-subtitle {
      font-size: 0.95rem;
    }

    .hero-description {
      font-size: 0.95rem;
    }

    .hero-cta {
      padding: 0.75rem 1.5rem;
      font-size: 0.95rem;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .hero-compact::before,
    .floating-dot {
      animation: none;
    }
    
    .hero-content {
      opacity: 1;
      transform: none;
    }
    
    .hero-cta:hover {
      transform: none;
    }
  }

  /* High contrast mode */
  @media (prefers-contrast: high) {
    .hero-headline,
    .hero-subtitle,
    .hero-description {
      text-shadow: 0 0 0 transparent;
      color: white;
    }
  }

  /* Performance optimizations */
  .hero-compact {
    contain: layout style paint;
  }

  .hero-content {
    contain: layout style;
  }
</style>

